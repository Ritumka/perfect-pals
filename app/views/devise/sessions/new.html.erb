<div class="container my-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Sign In</h2>
  <div class="card">
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs row g-3">
          <!-- Email -->
          <div class="col-12 form-floating">
            <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: { class: "form-control", id: "email", placeholder: "Email", autocomplete: "email" },
              label_html: { class: "form-label" } %>
          </div>

          <!-- Password -->
          <div class="col-12 form-floating">
            <%= f.input :password,
              required: false,
              input_html: { class: "form-control", id: "password", placeholder: "Password", autocomplete: "current-password" },
              label_html: { class: "form-label" } %>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="col-12 form-check">
              <%= f.input :remember_me,
                as: :boolean,
                input_html: { class: "form-check-input", id: "remember_me" },
                label_html: { class: "form-check-label", for: "remember_me" } %>
            </div>
          <% end %>
        </div>

        <div class="form-actions mt-4 text-center">
          <%= f.button :submit, "Log In", class: "btn btn-success px-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
