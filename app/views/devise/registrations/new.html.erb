<div class="container my-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Create an account</h2>
  <div class="card">
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs row g-3">
          <div class="col-12 form-floating">
            <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { class: "form-control", id: "email", placeholder: "john@example.com", autocomplete: "email" },
              label_html: { class: "form-label" } %>
          </div>

          <div class="col-12 form-floating">
            <%= f.input :password,
              required: true,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              input_html: { class: "form-control", id: "password", placeholder: "******", autocomplete: "new-password" },
              label_html: { class: "form-label" },
              hint_html: { class: "form-text text-muted" } %>
          </div>

          <div class="col-12 form-floating">
            <%= f.input :password_confirmation,
              required: true,
              input_html: { class: "form-control", id: "password_confirmation", placeholder: "******", autocomplete: "new-password" },
              label_html: { class: "form-label" } %>
          </div>

          <div class="col-6 form-floating">
            <%= f.input :first_name,
              input_html: { class: "form-control", id: "first_name", placeholder: "John" },
              label_html: { class: "form-label" } %>
          </div>

          <div class="col-6 form-floating">
            <%= f.input :last_name,
              input_html: { class: "form-control", id: "last_name", placeholder: "Doe" },
              label_html: { class: "form-label" } %>
          </div>

          <div class="col-md-6 form-floating w-100">
            <%= f.input :location,
              input_html: { class: "form-control", id: "location", placeholder: "Austin, TX" },
              label_html: { class: "form-label" } %>
          </div>

          <div class="col-12 form-floating">
            <%= f.input :bio,
              hint: "Don't worry. You can change it later",
              input_html: { class: "form-control", id: "bio", placeholder: "Write a shourt discription of your work, hobbies and roommate preferences.", rows: 3 },
              label_html: { class: "form-label" } %>
          </div>

          <div class="col-12 form-floating">
            <%= f.input :avatar,
              input_html: { class: "form-control", id: "avatar", placeholder: "Avatar URL" },
              label_html: { class: "form-label" } %>
          </div>
        </div>

        <div class="form-actions mt-4 text-center">
          <%= f.button :submit, "Sign Up", class: "btn btn-success px-4" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

