<div class="container my-5">

  <div class="row">
    <div class="col text-center mb-3">
    <%# TODO: Configure default %>
      <%= image_tag @user.avatar.present? ? @user.avatar : "default_avatar.png", 
              class: "rounded-circle", 
              width: 250, 
              alt: "photo of #{@user.first_name}" %>
    </div>
    <div class="col text-left mb-3">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      <div class="d-flex my-4 gap-2">
        <div class="small text-muted"><%= @user.age %></div>
        <span>&middot;</span>
        <div class="small text-muted"><%= @user.gender %></div>
        <span>&middot;</span>
        <div class="small text-muted"><%= @user.occupation %></div>
        <span>&middot;</span>
        <div class="small text-muted">$<%= @user.budget %></div>
        <span>&middot;</span>
        <div class="small text-muted"><%= @user.location %></div>
      </div>
      <%= @user.bio %>
      <%= @user.video_url %>
      <div class="d-flex my-4 gap-3 text-green">
        <% if @user.facebook_url.present? %>
          <h5><%= link_to @user.facebook_url, target: "_blank", class: "social-icon" do %><i class="fa-brands fa-facebook-f"></i><% end %></h5>
        <% end %>

        <% if @user.instagram_url.present? %>
          <h5><%= link_to @user.instagram_url, target: "_blank", class: "social-icon" do %><i class="fa-brands fa-instagram"></i><% end %></h5>
        <% end %>
      </div>

    </div>
    <div class="col text-center mb-3">
      <%= @user.trust_score %>
      <%= @user.survey_score %>
    </div>
  </div>
</div>

<hr style="border: 1px solid black; width: 100%; margin: 50px 0 30px 0;" />

