<div class="flex-grow-1">
  <div class="container">
    <div>
      <%= render partial: "shared/searchform" %>
    </div>

    <div id="users">
      <div class="d-flex flex-wrap gap-4 mt-2 justify-content-center">
        <% @users.each do |user| %>
          <%= render "users/card", user: user %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center mb-4">
    <%= paginate @users %>
  </div>
</div>
