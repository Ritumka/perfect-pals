<h1>Messages</h1>

<ul>
  <% @received_messages.each do |message| %>
    <li>
      From: <%= message.sender_id %> To: <%= message.recipient_id %> - <%= message.body %>
      <a href="/messages/conversation/<%= message.sender_id %>?current_user_id=<%= current_user.id %>">View Conversation</a>

    </li>
  <% end %>
</ul>
